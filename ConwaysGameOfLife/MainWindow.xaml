<Window x:Class="ConradsGameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConradsGameOfLife"
        mc:Ignorable="d"
        Title="Conway's Game of Life" Height="350" Width="525">

    <DockPanel Height="Auto">
        <TextBlock DockPanel.Dock="Top" Text="{Binding GenerationNumber, Mode=OneWay, StringFormat='Generation: \{0\}'}"></TextBlock>
        <Button DockPanel.Dock="Top" Command="{Binding EvolveCommand}">Evolve</Button>
        <Grid DockPanel.Dock="Bottom" Name="WorldGrid" ShowGridLines="True" Height="Auto"></Grid>
    </DockPanel>
</Window>
